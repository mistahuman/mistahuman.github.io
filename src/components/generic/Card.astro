---

interface CardProp {
	title?: string;
}

const {
	title = ''
}: CardProp = Astro.props;
---

<div class="card preset-filled-surface-100-900 border-[1px] border-surface-200-800 w-full p-4"> 
    <header class="text-2xl font-bold text-center">
        {title}
    </header>
    <hr class="divider" />
    <article class="p-4">
        <slot></slot>
    </article>
    <!-- <footer>
    </footer> -->
</div>